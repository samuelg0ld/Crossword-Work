body{
text-align: center;
}
#crossword-container {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

#crossword {
  /* Responsive grid sizing using CSS variables. JS will set --cols and --rows when available.
     The cell size clamps between 24px and 32px but can shrink to fit small viewports. */
  --cols: 13;
  --rows: 12;
  --cell-size: clamp(24px, calc((100vw - 40px) / var(--cols)), 32px);
  display: grid;
  align-content: center;
  grid-template-columns: repeat(var(--cols), var(--cell-size));
  grid-auto-rows: var(--cell-size);
  gap: 0px;
  max-width: calc(var(--cell-size) * var(--cols));
  margin: 0 auto;
}

/* make the grid a stacking context so the overlay can be absolute inside it */
#crossword {
  position: relative;
}

/* overlay that displays clue numbers visually on top of the inputs */
.overlay {
  position: absolute;
  inset: 0;
  display: grid;
  z-index: 3;
  pointer-events: none; /* ensure inputs remain focusable and clickable */
  /* overlay grid uses same sizing variables as #crossword; JS can set --cols on the container */
  grid-template-columns: repeat(var(--cols), var(--cell-size));
  grid-auto-rows: var(--cell-size);
  justify-items: start;
  align-items: start;
}

.clue-number {
  /* size and padding scale with the cell size so numbers remain legible and aligned on mobile */
  font-size: calc(var(--cell-size) * 0.36);
  color: rgba(0,0,0,0.75);
  align-self: start;
  justify-self: start;
  padding: calc(var(--cell-size) * 0.06) calc(var(--cell-size) * 0.08);
  line-height: 1;
  user-select: none;
  pointer-events: none; /* keep overlay non-interactive by default */
}

/* Reveal / password UI */
#reveal-container {
  margin: 16px auto;
  text-align: center;
}

#reveal-container input[type="password"] {
  margin-left: 8px;
  padding: 4px 8px;
}

#reveal-container button {
  margin-left: 8px;
  padding: 5px 10px;
}

#solved-wrap {
  margin-top: 12px;
}

#solved-image {
  max-width: 100%;
  height: auto;
  display: none; /* hidden until correct password */
  border: 2px solid #444;
}

#reveal-message {
  display: inline-block;
  margin-left: 12px;
  color: #900;
}

.cell {
  box-sizing: border-box;
  width: var(--cell-size);
  height: var(--cell-size);
  aspect-ratio: 1/1;
  text-align: center;
  font-size: 1.2em;
  border: 1px solid #333;
}

.cell.black {
  background-color: black;
}

.cell.incorrect {
  background-color: rgba(255,0,0,0.25) !important;
}